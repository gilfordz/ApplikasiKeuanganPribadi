<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivasiActivity">
<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="One Last Thing"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="20dp"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Term of Service"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/konten"
        android:layout_width="335dp"
        android:layout_height="358dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="148dp"
        android:fontWeight="400"
        android:fontFamily="@font/karla"
        android:paddingEnd="40dp"
        android:text="@string/terms"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/decc"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_baseline_cancel_24"
        android:text="Decline"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:background="@drawable/red_linier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_agree"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/green_linier"
        android:text="Agree"
        android:drawableStart="@drawable/ic_agree"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/decc"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>