<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity2">
    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More About you"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Delivery Updated"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
   <FrameLayout
       android:id="@+id/edit1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/question"
       app:layout_constraintLeft_toLeftOf="parent">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:drawableEnd="@drawable/ic_check_green"
        android:paddingEnd="10dp"
        android:background="@drawable/rounded_box"
        android:layout_marginStart="30dp"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Email"
           android:layout_marginStart="40dp"
           android:layout_marginTop="38dp"/>
   </FrameLayout>
    <FrameLayout
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit1"
        app:layout_constraintLeft_toLeftOf="parent">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/ic_check_green"
        android:paddingEnd="10dp"
        android:background="@drawable/rounded_box"
        android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit2"
        app:layout_constraintLeft_toLeftOf="parent">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/ic_check_green"
        android:paddingEnd="10dp"
        android:background="@drawable/rounded_box"
        android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit3"
        app:layout_constraintLeft_toLeftOf="parent">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/ic_check_green"
        android:paddingEnd="10dp"
        android:background="@drawable/rounded_box"
        android:layout_marginStart="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retyping Password"
            android:layout_marginStart="40dp"
            android:layout_marginTop="18dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/lets"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:textSize="18sp"
        android:text=" Let's Get Started "
        android:textColor="@color/white"
        android:alpha="0.7"
        android:background="@drawable/rounded_agree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>